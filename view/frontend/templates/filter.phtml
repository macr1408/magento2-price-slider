			max: <?=$range['max']?>,
			values: [ <?=$range['min']?>, <?=$range['max']?> ],
			slide: function( event, ui ) {
				$( "#amount-desde" ).val( ui.values[ 0 ] );
				$( "#amount-hasta" ).val( ui.values[ 1 ] );
			},
			change: function( event, ui ) {
                console.log(ui.values[0]+"~"+ui.values[1]);
